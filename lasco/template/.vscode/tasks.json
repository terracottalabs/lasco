{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start PDF Viewer Server",
      "type": "process",
      "command": "${execPath}",
      "args": ["scripts/pdf-server.js"],
      "options": {
        "env": {
          "ELECTRON_RUN_AS_NODE": "1"
        }
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
